
<div ng-app="cakeLoveApp" ng-controller="MainCtrl" ng-cloak>

    <input submit-required="true"></input>


    <nav class="navbar navbar-default" role="navigation" ng-controller="MainNavbarCtrl">
        <div class="container-fluid">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-click="isCollapsed = !isCollapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">Cake Love</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" collapse="isCollapsed">

                <aside ng-switch="userSvc.isLoggedIn">
                    <ul class="nav navbar-nav navbar-right">
                        <li ng-switch-when="true"><a href="#application-form">Application</a></li>
                        <li ng-switch-when="true"><a href="#instructor-guidelines">Instructor Guidelines</a></li>
                        <li ng-switch-when="true"><a>Signed in as {{ userSvc.userName }}</a></li>
                        <li ng-switch-when="true"><a href="#login" ng-click="userSvc.logout()">Logout</a></li>
                        <li ng-switch-when="false"><a href="#login">Login</a></li>
                        <li ng-switch-when="false"><a href="#register">Register</a></li>
                    </ul>
                </aside>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <header>
        <div class="container">
            <div class="page-header">
                <h1>{{ siteMapSvc.currentPage }}</h1>
            </div>
        </div>
    </header>

    <article class="container">

        <div class="row">

            <div class="col-lg-12">
                <div ng-view></div>
            </div>

        </div>

    </article>

    <footer>        

    </footer>

</div>
